---
interface Props {
  variant?: "primary" | "secondary";
  href?: string;
  download?: boolean;
  type?: "button" | "submit" | "reset";
  class?: string;
}

const {
  variant = "primary",
  href,
  download,
  type = "button",
  class: className,
} = Astro.props;

const baseClasses =
  "px-6 py-3 sm:px-6 sm:py-3 rounded-lg transition-all hover:scale-105 hover:shadow-lg font-medium focus:outline-none focus:ring-2 focus:ring-teal-900 dark:focus:ring-teal-400 focus:ring-offset-2 dark:focus:ring-offset-slate-950 active:scale-95 text-center flex-1 sm:flex-initial touch-manipulation";

const variantClasses = {
  primary:
    "bg-teal-900 dark:bg-teal-600 text-white hover:bg-teal-800 dark:hover:bg-teal-500",
  secondary:
    "border-2 border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 hover:border-teal-900 dark:hover:border-teal-400 hover:text-teal-900 dark:hover:text-teal-400",
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className || ""}`;

const Element = href ? "a" : "button";
---

<Element
  href={href}
  download={download}
  type={!href ? type : undefined}
  class={classes}
  {...Astro.props}
>
  <slot />
</Element>
