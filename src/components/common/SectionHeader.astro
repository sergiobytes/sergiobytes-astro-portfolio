---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center mb-8 sm:mb-10 md:mb-12 animate-fade-in-up" data-reveal>
  <h2
    class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4"
  >
    {title}
  </h2>
  <div class="w-20 h-1 bg-teal-900 dark:bg-teal-400 mx-auto"></div>
  {
    subtitle && (
      <p class="text-base sm:text-lg text-slate-600 dark:text-slate-300 mt-6">
        {subtitle}
      </p>
    )
  }
</div>
