            class="text-slate-600 dark:text-slate-300 hover:text-teal-900 dark:hover:text-teal-400 transition-all hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-teal-900 dark:focus:ring-teal-400 focus:ring-offset-2 dark:focus:ring-offset-slate-900 rounded px-2 py-1"
