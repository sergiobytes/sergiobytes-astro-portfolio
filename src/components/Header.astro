<header
  class="fixed top-0 w-full bg-white/80 backdrop-blur-md z-50 border-b border-slate-200 animate-fade-in-down"
>
  <nav class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- LOGO/NAME -->
      <a
        href="#home"
        class="text-xl font-bold text-slate-900 hover:text-teal-700 transition-colors"
      >
        Sergio <span class="text-teal-900">Barreras</span>
      </a>

      <!-- DESKTOP NAVIGATION -->
      <ul class="hidden md:flex items-center gap-8">
        <li>
          <a
            href="#about"
            class="text-slate-600 hover:text-teal-900 transition-colors"
            >Sobre mí
          </a>
        </li>
        <li>
          <a
            href="#experience"
            class="text-slate-600 hover:text-teal-900 transition-colors"
            >Experiencia
          </a>
        </li>
        <li>
          <a
            href="#projects"
            class="text-slate-600 hover:text-teal-900 transition-colors"
            >Proyectos
          </a>
        </li>
        <li>
          <a
            href="#tech"
            class="text-slate-600 hover:text-teal-900 transition-colors"
            >Tecnologías
          </a>
        </li>
        <li>
          <a
            href="#contact"
            class="px-5 py-2 bg-teal-900 text-white rounded-lg hover:bg-teal-800 transition-colors"
            >Contacto
          </a>
        </li>
      </ul>

      <!-- MOBILE MENU BUTTON -->
      <button
        id="menu-toggle"
        class="md:hidden p-2 text-slate-600 hover:text-teal-900"
        aria-label="Toggle Menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- MOBILE MENU -->

    <div
      id="mobile-menu"
      class="hidden md:hidden pt-4 pb-2 animate-fade-in-down"
    >
      <ul class="flex flex-col gap-4">
        <li>
          <a
            href="#about"
            class="block text-slate-600 hover:text-teal-900 transition-colors"
            >Sobre mí
          </a>
        </li>
        <li>
          <a
            href="#experience"
            class="block text-slate-600 hover:text-teal-900 transition-colors"
            >Experiencia
          </a>
        </li>
        <li>
          <a
            href="#projects"
            class="block text-slate-600 hover:text-teal-900 transition-colors"
            >Proyectos
          </a>
        </li>
        <li>
          <a
            href="#tech"
            class="block text-slate-600 hover:text-teal-900 transition-colors"
            >Tecnologías
          </a>
        </li>
        <li>
          <a
            href="#contact"
            class="block text-slate-600 hover:text-teal-900 transition-colors"
            >Contacto
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  menuToggle?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  const mobileLinks = mobileMenu?.querySelectorAll("a");

  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
    });
  });
</script>
