---
import { getTranslations, type Language } from "../i18n/translations";
import SectionHeader from "./common/SectionHeader.astro";

interface Props {
  lang?: Language;
}

const { lang = "en" } = Astro.props;
const t = getTranslations(lang);
---

<section
  id="about"
  class="py-12 sm:py-16 md:py-20 px-4 sm:px-6 bg-white dark:bg-slate-900"
>
  <div class="max-w-6xl mx-auto">
    <SectionHeader title={t.about.title} data-i18n="about.title" />

    <div class="grid md:grid-cols-2 gap-8 sm:gap-10 md:gap-12 items-center">
      <!-- TEXT -->
      <div class="space-y-4 sm:space-y-6 animate-fade-in-right" data-reveal>
        <p
          class="text-base sm:text-lg text-slate-600 dark:text-slate-300 leading-relaxed"
          set:html={t.about.paragraph1}
          data-i18n="about.paragraph1"
        />
        <p
          class="text-base sm:text-lg text-slate-600 dark:text-slate-300 leading-relaxed"
          set:html={t.about.paragraph2}
          data-i18n="about.paragraph2"
        />
        <p
          class="text-base sm:text-lg text-slate-600 dark:text-slate-300 leading-relaxed"
          set:html={t.about.paragraph3}
          data-i18n="about.paragraph3"
        />

        <div class="pt-4">
          <a
            href="https://devcrafters.dev"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-teal-900 dark:text-teal-400 hover:text-teal-700 dark:hover:text-teal-300 font-medium transition-all hover:gap-3 focus:outline-none focus:ring-2 focus:ring-teal-900 dark:focus:ring-teal-400 focus:ring-offset-2 dark:focus:ring-offset-slate-900 rounded px-2 py-1"
            data-i18n="about.devCraftersLink"
          >
            {t.about.devCraftersLink}
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- STATS -->
      <div
        class="grid grid-cols-2 gap-4 sm:gap-6 animate-fade-in-left"
        data-reveal
      >
        <div
          class="bg-slate-50 p-4 sm:p-6 rounded-xl border border-slate-200 hover:border-teal-200 transition-all hover:shadow-lg hover:scale-105 cursor-default"
        >
          <p class="text-3xl sm:text-4xl font-bold text-teal-900 mb-2">4+</p>
          <p
            class="text-sm sm:text-base text-slate-600"
            data-i18n="about.stats.years"
          >
            {t.about.stats.years}
          </p>
        </div>

        <div
          class="bg-slate-50 p-4 sm:p-6 rounded-xl border border-slate-200 hover:border-teal-200 transition-all hover:shadow-lg hover:scale-105 cursor-default"
        >
          <p class="text-3xl sm:text-4xl font-bold text-teal-900 mb-2">15+</p>
          <p
            class="text-sm sm:text-base text-slate-600"
            data-i18n="about.stats.projects"
          >
            {t.about.stats.projects}
          </p>
        </div>

        <div
          class="bg-slate-50 p-4 sm:p-6 rounded-xl border border-slate-200 hover:border-teal-200 transition-all hover:shadow-lg hover:scale-105 cursor-default"
        >
          <p class="text-3xl sm:text-4xl font-bold text-teal-900 mb-2">30+</p>
          <p
            class="text-sm sm:text-base text-slate-600"
            data-i18n="about.stats.certifications"
          >
            {t.about.stats.certifications}
          </p>
        </div>

        <div
          class="bg-slate-50 p-4 sm:p-6 rounded-xl border border-slate-200 hover:border-teal-200 transition-all hover:shadow-lg hover:scale-105 cursor-default"
        >
          <p class="text-3xl sm:text-4xl font-bold text-teal-900 mb-2">100%</p>
          <p
            class="text-sm sm:text-base text-slate-600"
            data-i18n="about.stats.commitment"
          >
            {t.about.stats.commitment}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
