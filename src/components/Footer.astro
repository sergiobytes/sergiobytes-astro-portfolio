---
import { getTranslations, type Language } from "../i18n/translations";
import SocialLinks from "./common/SocialLinks.astro";

interface Props {
  lang?: Language;
}

const { lang = "en" } = Astro.props;
const t = getTranslations(lang);
---

<footer class="bg-slate-900 text-slate-300 py-12 sm:py-16 px-4 sm:px-6">
  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-3 gap-6 sm:gap-8 mb-8">
      <!-- COLUMN 1 -->
      <div>
        <h3 class="text-white text-lg sm:text-xl font-bold mb-3 sm:mb-4">
          Sergio Barreras
        </h3>
        <p
          class="text-slate-400 text-sm sm:text-base mb-3 sm:mb-4"
          data-i18n="footer.description"
        >
          {t.footer.description}
        </p>
        <SocialLinks variant="footer" />
      </div>

      <!-- COLUMN 2 -->
      <div>
        <h4
          class="text-white text-lg sm:text-xl font-bold mb-3 sm:mb-4"
          data-i18n="footer.quickLinks"
        >
          {t.footer.quickLinks}
        </h4>
        <ul class="space-y-2">
          <li>
            <a
              href="#about"
              class="text-sm sm:text-base hover:text-teal-400 dark:hover:text-teal-300 transition-all hover:translate-x-1 inline-block focus:outline-none focus:ring-2 focus:ring-teal-500 dark:focus:ring-teal-400 focus:ring-offset-2 focus:ring-offset-slate-900 dark:focus:ring-offset-slate-900 rounded px-1 py-1 touch-manipulation active:text-teal-300 dark:active:text-teal-200"
              data-i18n="nav.about">{t.nav.about}</a
            >
          </li>
          <li>
            <a
              href="#experience"
              class="text-sm sm:text-base hover:text-teal-400 dark:hover:text-teal-300 transition-all hover:translate-x-1 inline-block focus:outline-none focus:ring-2 focus:ring-teal-500 dark:focus:ring-teal-400 focus:ring-offset-2 focus:ring-offset-slate-900 dark:focus:ring-offset-slate-900 rounded px-1 py-1 touch-manipulation active:text-teal-300 dark:active:text-teal-200"
              data-i18n="nav.experience">{t.nav.experience}</a
            >
          </li>
          <li>
            <a
              href="#projects"
              class="text-sm sm:text-base hover:text-teal-400 dark:hover:text-teal-300 transition-all hover:translate-x-1 inline-block focus:outline-none focus:ring-2 focus:ring-teal-500 dark:focus:ring-teal-400 focus:ring-offset-2 focus:ring-offset-slate-900 dark:focus:ring-offset-slate-900 rounded px-1 py-1 touch-manipulation active:text-teal-300 dark:active:text-teal-200"
              data-i18n="nav.projects">{t.nav.projects}</a
            >
          </li>
          <li>
            <a
              href="#tech"
              class="text-sm sm:text-base hover:text-teal-400 dark:hover:text-teal-300 transition-all hover:translate-x-1 inline-block focus:outline-none focus:ring-2 focus:ring-teal-500 dark:focus:ring-teal-400 focus:ring-offset-2 focus:ring-offset-slate-900 dark:focus:ring-offset-slate-900 rounded px-1 py-1 touch-manipulation active:text-teal-300 dark:active:text-teal-200"
              data-i18n="nav.tech">{t.nav.tech}</a
            >
          </li>
          <li>
            <a
              href="#contact"
              class="text-sm sm:text-base hover:text-teal-400 dark:hover:text-teal-300 transition-all hover:translate-x-1 inline-block focus:outline-none focus:ring-2 focus:ring-teal-500 dark:focus:ring-teal-400 focus:ring-offset-2 focus:ring-offset-slate-900 dark:focus:ring-offset-slate-900 rounded px-1 py-1 touch-manipulation active:text-teal-300 dark:active:text-teal-200"
              data-i18n="nav.contact">{t.nav.contact}</a
            >
          </li>
        </ul>
      </div>

      <!-- COLUMN 3 -->
      <div>
        <h4
          class="text-white text-lg sm:text-xl font-bold mb-3 sm:mb-4"
          data-i18n="footer.devCrafters"
        >
          {t.footer.devCrafters}
        </h4>
        <p
          class="text-slate-400 text-sm sm:text-base mb-3 sm:mb-4"
          data-i18n="footer.devCraftersDescription"
        >
          {t.footer.devCraftersDescription}
        </p>
        <a
          href="https://devcrafters.dev"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm sm:text-base text-teal-400 dark:text-teal-400 hover:text-teal-300 dark:hover:text-teal-200 transition-all hover:gap-3 focus:outline-none focus:ring-2 focus:ring-teal-500 dark:focus:ring-teal-400 focus:ring-offset-2 focus:ring-offset-slate-900 dark:focus:ring-offset-slate-900 rounded px-1 py-1 touch-manipulation active:text-teal-200"
          data-i18n="footer.visitSite"
        >
          {t.footer.visitSite}
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>

    <!-- BOTTOM -->
    <div
      class="border-t border-slate-800 dark:border-slate-700 pt-6 sm:pt-8 text-center text-slate-500 dark:text-slate-400 text-sm sm:text-base"
    >
      <p data-i18n="footer.madeWith">
        &copy; {new Date().getFullYear()} Sergio Barreras. {t.footer.madeWith}
      </p>
    </div>
  </div>
</footer>
