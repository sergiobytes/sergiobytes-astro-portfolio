---
import Image from "astro/components/Image.astro";
import { getTranslations, type Language } from "../i18n/translations";
import Button from "./common/Button.astro";
import SocialLinks from "./common/SocialLinks.astro";

interface Props {
  lang?: Language;
}

const { lang = "en" } = Astro.props;
const t = getTranslations(lang);
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center px-4 sm:px-6 pt-20 relative"
>
  <!-- Gradient overlay at bottom -->
  <div
    class="absolute bottom-0 left-0 right-0 h-32 bg-linear-to-b from-transparent to-white dark:to-slate-900 pointer-events-none"
  >
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid md:grid-cols-2 gap-8 sm:gap-10 md:gap-12 items-center">
      <!-- TEXT -->
      <div
        class="space-y-4 sm:space-y-5 md:space-y-6 animate-fade-in-right"
        data-reveal
      >
        <div class="inline-block">
          <span
            class="px-4 py-2 bg-teal-50 dark:bg-teal-900/30 text-teal-900 dark:text-teal-400 rounded-full text-sm font-medium border border-teal-200 dark:border-teal-700"
            data-i18n="hero.available"
          >
            {t.hero.available}
          </span>
        </div>

        <h1
          class="text-4xl sm:text-5xl md:text-6xl font-bold text-slate-900 dark:text-white leading-tight"
        >
          <span data-i18n="hero.greeting">{t.hero.greeting}</span>
          <span class="block text-teal-600 dark:text-teal-400"
            >Sergio Barreras</span
          >
        </h1>

        <p
          class="text-xl sm:text-2xl text-slate-600 dark:text-slate-300 font-medium"
          data-i18n="hero.role"
        >
          {t.hero.role}
        </p>

        <p
          class="text-base sm:text-lg text-slate-600 dark:text-slate-400 leading-relaxed"
          data-i18n="hero.description"
          set:html={t.hero.description}
        />

        <div class="flex flex-wrap gap-3 sm:gap-4 pt-4">
          <Button variant="primary" href="#contact" data-i18n="hero.contactBtn">
            {t.hero.contactBtn}
          </Button>
          <Button
            variant="secondary"
            href="/cv/Sergio-Barreras-CV.pdf"
            download
            data-i18n="hero.downloadCV"
          >
            {t.hero.downloadCV}
          </Button>
        </div>

        <!-- SOCIAL LINKS -->
        <div class="pt-4">
          <SocialLinks variant="hero" />
        </div>
      </div>

      <!-- AVATAR -->
      <div class="flex justify-center animate-fade-in-left" data-reveal>
        <div class="relative">
          <!-- BACKGROUND CIRCLE -->
          <div
            class="absolute inset-0 bg-linear-to-br from-teal-400 to-sky-400 rounded-full blur-2xl opacity-20 animate-pulse"
          >
          </div>

          <Image
            src="/images/sergiobytes.jpeg"
            alt="Sergio Barreras"
            width={320}
            height={320}
            class="relative w-80 h-80 rounded-full object-cover border-4 border-white dark:border-slate-800 shadow-2xl"
          />

          <!-- FLOATING BADGE -->
          <div
            class="absolute -bottom-4 -right-4 bg-white dark:bg-slate-800 px-6 py-3 rounded-full shadow-lg border border-slate-200 dark:border-slate-700 animate-bounce-fade-in"
          >
            <p
              class="text-sm font-semibold text-teal-900 dark:text-teal-400"
              data-i18n="hero.yearsExp"
            >
              {t.hero.yearsExp}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
