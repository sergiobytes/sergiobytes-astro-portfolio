---
import { getTranslations, type Language } from "../i18n/translations";

interface Props {
  lang?: Language;
}

const { lang = "es" } = Astro.props;
const t = getTranslations(lang);
---

<section
  id="contact"
  class="py-12 sm:py-16 md:py-20 px-4 sm:px-6 bg-white dark:bg-slate-900"
>
  <div class="max-w-4xl mx-auto">
    <div
      class="text-center mb-8 sm:mb-10 md:mb-12 animate-fade-in-up"
      data-reveal
    >
      <h2
        class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4"
      >
        {t.contact.title}
      </h2>
      <div class="w-20 h-1 bg-teal-900 dark:bg-teal-600 mx-auto mb-6"></div>
      <p class="text-base sm:text-lg text-slate-600 dark:text-slate-300">
        {t.contact.description}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-4 sm:gap-6 mb-8 sm:mb-10 md:mb-12">
      <!-- EMAIL -->
      <a
        href="mailto:sergiobg.isc@gmail.com"
        class="group bg-slate-50 dark:bg-slate-800 p-5 sm:p-6 rounded-xl border border-slate-200 dark:border-slate-700 hover:border-teal-200 dark:hover:border-teal-600 hover:shadow-xl transition-all text-center animate-fade-up hover:scale-105 focus:outline-none focus:ring-2 focus:ring-teal-900 dark:focus:ring-teal-600 focus:ring-offset-2 active:scale-95 touch-manipulation"
        data-reveal
      >
        <div
          class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-200 transition-colors"
        >
          <svg
            class="w-6 h-6 text-teal-900"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
        <h3 class="font-bold text-slate-900 dark:text-white mb-2">
          {t.contact.email}
        </h3>
        <p class="text-sm text-slate-600 dark:text-slate-300">
          sergiobg.isc@gmail.com
        </p>
      </a>

      <!-- LINKEDIN -->
      <a
        href="https://www.linkedin.com/in/sergio-barreras"
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-slate-50 dark:bg-slate-800 p-5 sm:p-6 rounded-xl border border-slate-200 dark:border-slate-700 hover:border-teal-200 dark:hover:border-teal-600 hover:shadow-xl transition-all text-center animate-fade-up hover:scale-105 focus:outline-none focus:ring-2 focus:ring-teal-900 dark:focus:ring-teal-600 focus:ring-offset-2 active:scale-95 touch-manipulation"
        style="animation-delay: 100ms"
        data-reveal
      >
        <div
          class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-200 transition-colors"
        >
          <svg
            class="w-6 h-6 text-teal-900"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
        </div>
        <h3 class="font-bold text-slate-900 dark:text-white mb-2">LinkedIn</h3>
        <p class="text-sm text-slate-600 dark:text-slate-300">
          sergio-barreras
        </p>
      </a>

      <!-- GITHUB -->
      <a
        href="https://github.com/sergiobytes"
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-slate-50 dark:bg-slate-800 p-5 sm:p-6 rounded-xl border border-slate-200 dark:border-slate-700 hover:border-teal-200 dark:hover:border-teal-600 hover:shadow-xl transition-all text-center animate-fade-up hover:scale-105 focus:outline-none focus:ring-2 focus:ring-teal-900 dark:focus:ring-teal-600 focus:ring-offset-2 active:scale-95 touch-manipulation"
        style="animation-delay: 200ms"
        data-reveal
      >
        <div
          class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-teal-200 transition-colors"
        >
          <svg
            class="w-6 h-6 text-teal-900"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </div>
        <h3 class="font-bold text-slate-900 dark:text-white mb-2">GitHub</h3>
        <p class="text-sm text-slate-600 dark:text-slate-300">@sergiobytes</p>
      </a>
    </div>

    <!-- CTA Final -->
    <div
      class="text-center bg-linear-to-r from-teal-900 to-teal-700 text-white p-8 sm:p-10 md:p-12 rounded-2xl animate-fade-up"
      data-reveal
    >
      <h3 class="text-2xl sm:text-3xl font-bold mb-4">{t.contact.cta}</h3>
      <p class="text-teal-100 mb-6 sm:mb-8 text-base sm:text-lg">
        {t.contact.ctaDescription}
      </p>
      <a
        href="mailto:sergiobg.isc@gmail.com"
        class="inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 bg-white dark:bg-slate-100 text-teal-900 dark:text-teal-900 rounded-lg hover:bg-slate-100 dark:hover:bg-white transition-all hover:scale-110 hover:shadow-xl font-bold text-base sm:text-lg focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-teal-900 active:scale-95 touch-manipulation"
      >
        {t.contact.ctaButton}
        <svg
          class="w-5 h-5 transition-transform group-hover:translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
