---
import { getTranslations, type Language } from "../i18n/translations";
import SectionHeader from "./common/SectionHeader.astro";
import ContactForm from "./ContactForm.astro";

interface Props {
  lang?: Language;
}

const { lang = "en" } = Astro.props;
const t = getTranslations(lang);
---

<section
  id="contact"
  class="py-12 sm:py-16 md:py-20 px-4 sm:px-6 bg-white dark:bg-slate-900 relative"
>
  <!-- Gradient overlay at top -->
  <div
    class="absolute top-0 left-0 right-0 h-32 bg-linear-to-b from-white dark:from-slate-900 to-transparent pointer-events-none"
  >
  </div>

  <div class="max-w-4xl mx-auto relative z-10">
    <SectionHeader
      title={t.contact.title}
      subtitle={t.contact.description}
      data-i18n="contact.title"
      data-i18n-subtitle="contact.description"
    />
    <p class="hidden" data-i18n="contact.description">
      {t.contact.description}
    </p>

    <!-- Contact Form -->
    <ContactForm lang={lang} />
  </div>
</section>
