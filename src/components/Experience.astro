---
import { getTranslations, type Language } from "../i18n/translations";
import SectionHeader from "./common/SectionHeader.astro";

interface Props {
  lang?: Language;
}

const { lang = "en" } = Astro.props;
const t = getTranslations(lang);
const experiences = t.experience.experiences;
---

<section
  id="experience"
  class="py-12 sm:py-16 md:py-20 px-4 sm:px-6 bg-slate-50 dark:bg-slate-950 relative"
>
  <!-- Gradient overlay at top -->
  <div
    class="absolute top-0 left-0 right-0 h-32 bg-linear-to-b from-slate-50 dark:from-slate-950 to-transparent pointer-events-none"
  >
  </div>
  <!-- Gradient overlay at bottom -->
  <div
    class="absolute bottom-0 left-0 right-0 h-32 bg-linear-to-b from-transparent to-white dark:to-slate-900 pointer-events-none"
  >
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <SectionHeader title={t.experience.title} data-i18n="experience.title" />

    <div class="space-y-6 sm:space-y-8">
      {
        experiences.map((exp, index) => (
          <div
            class="bg-white dark:bg-slate-900 p-5 sm:p-6 md:p-8 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-teal-200 dark:hover:border-teal-600 hover:shadow-xl transition-all animate-fade-in-up hover:scale-[1.02]"
            style={`animation-delay: ${index * 100}ms`}
            data-reveal
          >
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
              <div>
                <h3
                  class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white mb-1"
                  data-i18n={`experience.experiences.${index}.role`}
                >
                  {exp.role}
                </h3>
                <p
                  class="text-base sm:text-lg text-teal-900 dark:text-teal-400 font-medium"
                  data-i18n={`experience.experiences.${index}.company`}
                >
                  {exp.company}
                </p>
              </div>

              <div class="mt-2 md:mt-0 text-slate-600 dark:text-slate-400">
                <p
                  class="font-medium"
                  data-i18n={`experience.experiences.${index}.period`}
                >
                  {exp.period}
                </p>
                <p
                  class="text-sm"
                  data-i18n={`experience.experiences.${index}.location`}
                >
                  {exp.location}
                </p>
              </div>
            </div>

            <ul class="space-y-3 mt-6">
              {exp.highlights.map((hightlight, highlightIndex) => (
                <li class="flex items-start gap-3 text-slate-600 dark:text-slate-300">
                  <svg
                    class="w-5 h-5 text-teal-900 dark:text-teal-400 shrink-0 mt-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span
                    data-i18n={`experience.experiences.${index}.highlights.${highlightIndex}`}
                  >
                    {hightlight}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
