    class="absolute bottom-0 left-0 right-0 h-32 bg-linear-to-b from-transparent to-white dark:to-slate-900 pointer-events-none"
  >
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div
      class="text-center mb-8 sm:mb-10 md:mb-12 animate-fade-in-up"
      data-reveal
    >
      <h2
        class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4"
        data-i18n="tech.title"
      >
        {t.tech.title}
      </h2>
      <div class="w-20 h-1 bg-teal-900 dark:bg-teal-600 mx-auto mb-6"></div>
      <p
        class="text-sm sm:text-base text-slate-600 dark:text-slate-300 max-w-2xl mx-auto"
        data-i18n="tech.description"
      >
        {t.tech.description}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-4 sm:gap-6">
      {
        techCategories.map((category, index) => (
          <div
            class="bg-white dark:bg-slate-900 p-4 sm:p-5 md:p-6 rounded-xl border border-slate-200 dark:border-slate-700 hover:border-teal-200 dark:hover:border-teal-600 hover:shadow-xl transition-all animate-fade-up hover:scale-105 cursor-default"
            style={`animation-delay: ${index * 100}ms`}
            data-reveal
          >
            <div class="flex items-center gap-2 sm:gap-3 mb-3 sm:mb-4">
              <span class="text-2xl sm:text-3xl">{category.icon}</span>
              <h3
                class="text-base sm:text-lg md:text-xl font-bold text-slate-900 dark:text-white"
                data-i18n={`tech.categories.${category.key}`}
              >
                {category.name}
              </h3>
            </div>

            <div class="flex items-center justify-center">
              <img
                src={`https://skills.syvixor.com/api/icons?i=${category.skills}`}
                alt={category.name}
                class="h-8"
              />
            </div>
          </div>
        ))
      }
    </div>

    <!-- DEVCRAFTERS CTA -->
    <div
      class="mt-12 text-center bg-linear-to-r from-teal-50 to-sky-50 dark:from-slate-800 dark:to-slate-900 p-8 rounded-xl border border-teal-200 dark:border-slate-700 animate-fade-up"
      data-reveal
    >
      <div class="flex justify-center mb-4">
        <Image
          src="/images/logos/devcrafters.png"
          alt="DevCrafters Logo"
          width={48}
          height={48}
          class="h-12"
        />
      </div>
      <h3
        class="text-2xl font-bold text-slate-900 dark:text-white mb-3"
        data-i18n="tech.devCraftersTitle"
      >
        {t.tech.devCraftersTitle}
      </h3>
      <p
        class="text-slate-600 dark:text-slate-300 mb-6 max-w-2xl mx-auto"
        data-i18n="tech.devCraftersDescription"
      >
        {t.tech.devCraftersDescription}
      </p>
      <a
        href="https://devcrafters.dev"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-teal-900 dark:bg-teal-600 text-white rounded-lg hover:bg-teal-800 dark:hover:bg-teal-500 transition-all hover:scale-105 hover:shadow-lg font-medium focus:outline-none focus:ring-2 focus:ring-teal-900 dark:focus:ring-teal-600 focus:ring-offset-2"
